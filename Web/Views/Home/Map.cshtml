@{
    ViewData["ActivePage"] = "Map";
}

<div class="general-map-container">
    <div class="control-container">
        <div class="info">
            <span id="point-count">Point: 0</span><br />
            <span id="meal-count">Meal: 0</span><br />
            <span id="waste-count">Waste: 0</span><br />
            <span id="restart-count">Restart: 0</span><br /><br />
        </div>
        <div class="map-buttons">
            <button id="start-button" type="button" class="btn btn-success">Start</button>
            <button id="stop-button" type="button" class="btn btn-danger">Stop</button>
        </div>
    </div>
    <div class="map-container">
        <canvas width="500" height="500" id="map-canvas"></canvas>
    </div>
</div>

@section Scripts {
    <script src="/lib/signalr/dist/webworker/signalr.min.js"></script>
    <script src="/js/map.js"></script>
}